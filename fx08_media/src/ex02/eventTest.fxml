<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="710.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ex02.Controller">
   <children>
      <MediaView fx:id="fxMediaView" fitHeight="250.0" fitWidth="400.0" layoutX="32.0" layoutY="25.0" />
      <Button fx:id="btnPlay" layoutX="537.0" layoutY="34.0" mnemonicParsing="false" onAction="#myPlay" prefWidth="130.0" text="재생">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnPause" layoutX="537.0" layoutY="72.0" mnemonicParsing="false" onAction="#myPause" prefWidth="130.0" text="일시정지">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnStop" layoutX="537.0" layoutY="110.0" mnemonicParsing="false" onAction="#myStop" prefHeight="5.0" prefWidth="130.0" text="종료">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Label layoutX="454.0" layoutY="170.0" text="시간">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <ProgressBar fx:id="progressBar" layoutX="454.0" layoutY="189.0" prefWidth="200.0" progress="0.0" />
      <ProgressIndicator fx:id="progressIndicator" layoutX="661.0" layoutY="188.0" progress="0.0" />
      <Label fx:id="labelTime" layoutX="610.0" layoutY="207.0" text="0/0 sec">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Label layoutX="454.0" layoutY="226.0" text="소리">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <Slider fx:id="sliderVolume" layoutX="454.0" layoutY="250.0" onMouseDragged="#volumeControl" prefHeight="14.0" prefWidth="200.0" showTickMarks="true" />
   </children>
</AnchorPane>
